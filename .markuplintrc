{
	"excludeFiles": ["./src/examples/**/*"],
	"extends": ["markuplint:recommended-react"],
	"parser": {
		"\\.tsx$": "@markuplint/jsx-parser"
	},
	"specs": {
		"\\.tsx$": "@markuplint/react-spec"
	},
	"rules": {
		"heading-levels": false
	},
	"nodeRules": [
		{
			"selector": "option",
			"rules": {
				"permitted-contents": false
			}
		}
	]
}
